<div class="author">
    <h1 class="author__heading">Hi, I'm Sarah</h1>
    <p class="author__body">Web developer and content creator</p>
</div>

<img src="/img/hero-image.webp" alt="a girl with pink flower hair" class="hero-image" width="981" height="528">

<section class="articles"> 
    <h2 class="articles__heading">Latest Posts</h2>
    <ul class="article-ul">

        <% data.forEach(post => { %>
            <li class="article-list__item">
                <a href="/posts/<%- post._id %>">
                    <span><%- post.title %></span>
                    <span class="article-list__date"><%- post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>

    </ul>

    <% if (nextPage !== null) { %>
    <a href="/?page<%= nextPage %>s" class="pagination">&lt; View Older Posts</a>
    <% } %>

</section>
